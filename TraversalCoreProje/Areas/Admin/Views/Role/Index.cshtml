@model List<AppRole>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

@if (Model.Count > 0)
{
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Rol Adı</th>
			<th>Sil</th>
			<th>Güncelle</th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
				<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
			</tr>
		}
	</table>
}
else
{
	<div class="alert alert-success">
		<span>Herhangi Bir Rol Bulunamadı</span>
	</div>
}
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-dark">Yeni Rol Girişi</a>
