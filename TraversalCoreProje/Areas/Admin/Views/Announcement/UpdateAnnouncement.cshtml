@model AnnouncementUpdateDTO

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="AnnouncementID" />
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title"></span>
    <br />
    <label>Duyuru İçeriği</label>
    <input type="text" asp-for="Content" class="form-control" />
    <span asp-validation-for="Content"></span>
    <br />
    <button class="btn btn-outline-dark">Duyuruyu Güncelle</button>
</form>

