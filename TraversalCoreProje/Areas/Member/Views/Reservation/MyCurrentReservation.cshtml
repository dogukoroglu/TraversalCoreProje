@using EntityLayer.Concrete
@model List<Reservation>

@{
	ViewData["Title"] = "MyCurrentReservation";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h1>Aktif Rezervasyonlar</h1>

@if (!Model.Any())
{
    @*<span>Aktif Rezervasyon Bulunamadı!</span>*@
    <h2>Aktif Rezervasyon Bulunamadı!</h2>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Rezervasyon Tarihi</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationID</td>
                <th>@item.Destination.City</th>
                <th>@item.PersonCount</th>
                <th>@item.ReservationDate</th>
                <th>@item.Status</th>
            </tr>
        }
    </table>
}



