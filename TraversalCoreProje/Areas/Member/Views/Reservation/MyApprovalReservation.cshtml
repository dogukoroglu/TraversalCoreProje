@using EntityLayer.Concrete
@model List<Reservation>

@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Onay Bekleyen Rezervasyonlar</h4>
				<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
				<div class="heading-elements">
					<ul class="list-inline mb-0">
						<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
						<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
						<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
						<li><a data-action="close"><i class="ft-x"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="card-content collapse show">
				<div class="card-body">
					<p class="card-text">Web Sitemiz Traversal üzerinde yapmış olduğunuz onay bekleyen rezervasyon listenize aşağıdan erişebilirsiniz. Rehberlerimiz ve diğer çalışanlarımız en kısa sürede sizlere dönüş yapacaktır.</p>
					<div class="table-responsive">
						@if (!Model.Any())
						{
							<h2>Onay Bekleyen Rezervasyon Bulunamadı!</h2>
						}
						else
						{
							<table class="table">
								<thead>
									<tr>
										<th>#</th>
										<th>Lokasyon</th>
										<th>Kişi Sayısı</th>
										<th>Rezervasyon Tarihi</th>
										<th>Durum</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.ReservationID</td>
											<th>@item.Destination.City</th>
											<th>@item.PersonCount</th>
											<th>@item.ReservationDate</th>
											<th>@item.Status</th>
										</tr>
									}
								</tbody>
							</table>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>







